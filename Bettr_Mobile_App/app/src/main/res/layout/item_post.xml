<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="12dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Header del Post -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfilePost"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logobettr"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="#FACC15"
            app:strokeWidth="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Username -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvPostInfo"
            app:layout_constraintStart_toEndOf="@+id/ivProfilePost"
            app:layout_constraintTop_toTopOf="@+id/ivProfilePost"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Habit Type Badge -->
        <TextView
            android:id="@+id/tvHabitType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_habit_type_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="ðŸ’ª Ejercicio"
            android:textColor="#FACC15"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
            app:layout_constraintStart_toEndOf="@+id/tvUserName"
            app:layout_constraintTop_toTopOf="@+id/tvUserName" />

        <!-- Time info -->
        <TextView
            android:id="@+id/tvPostInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ hace 1h"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfilePost"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

        <!-- Streak Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvStreakCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#FACC15"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfilePost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivProfilePost">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ 45"
                    android:textColor="#1C1F22"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Imagen Principal -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPostImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProfilePost">

            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logobettr" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Acciones -->
        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cvPostImage">

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/btn_star_big_off"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivComment"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="24dp"
                android:src="@android:drawable/stat_notify_chat"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_menu_share"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- DescripciÃ³n -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="3dp"
            android:paddingHorizontal="20dp"
            android:text="DescripciÃ³n del hÃ¡bito..."
            android:textColor="#E5E7EB"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llActions" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
